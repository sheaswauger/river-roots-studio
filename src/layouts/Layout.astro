---
import '../styles/global.css';
import logoImport from '../assets/logo.webp';
const logoSrc = typeof logoImport === 'string' ? logoImport : logoImport.src;

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'River Roots Studio — Unearth Your Creative Compass',
  description = 'River Roots Studio offers creative workshops and guidance to help you unearth your creative compass in Jacksonville, Illinois.',
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet" />
  </head>
  <body class="min-h-screen flex flex-col">
    <!-- Announcement Bar -->
    <div class="bg-moss text-cream text-center text-sm py-2 px-4">
      <p>&#10022; Something earthy is coming this spring — <a href="#newsletter" class="underline hover:text-cream/80 transition-colors">be the first to know</a></p>
    </div>

    <!-- Header / Nav -->
    <header class="bg-cream border-b border-moss/10 sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex items-center justify-between h-16">
        <a href="/" class="flex items-center gap-2 font-heading text-xl sm:text-2xl font-bold text-moss tracking-tight">
          <img src={logoSrc} alt="" width="40" height="40" class="h-10 w-auto mix-blend-multiply" />
          River Roots Studio
        </a>

        <!-- Desktop Nav -->
        <nav class="hidden md:flex items-center gap-8" aria-label="Main navigation">
          <a href="/workshops" class="text-brown hover:text-moss transition-colors text-sm font-medium">Workshops</a>
          <a href="/creative-compass" class="text-brown hover:text-moss transition-colors text-sm font-medium">Creative Compass</a>
          <a href="/about" class="text-brown hover:text-moss transition-colors text-sm font-medium">About</a>
          <a href="/journal" class="text-brown hover:text-moss transition-colors text-sm font-medium">Journal</a>
          <a href="/contact" class="text-brown hover:text-moss transition-colors text-sm font-medium">Contact</a>
        </nav>

        <!-- Hamburger Button -->
        <button
          id="mobile-menu-btn"
          type="button"
          class="md:hidden p-2 text-brown hover:text-moss"
          aria-label="Open menu"
          aria-expanded="false"
          aria-controls="mobile-menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path id="hamburger-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>

      <!-- Mobile Nav -->
      <nav
        id="mobile-menu"
        class="md:hidden hidden border-t border-moss/10 bg-cream"
        aria-label="Mobile navigation"
      >
        <div class="px-4 py-4 flex flex-col gap-3">
          <a href="/workshops" class="text-brown hover:text-moss transition-colors font-medium py-1">Workshops</a>
          <a href="/creative-compass" class="text-brown hover:text-moss transition-colors font-medium py-1">Creative Compass</a>
          <a href="/about" class="text-brown hover:text-moss transition-colors font-medium py-1">About</a>
          <a href="/journal" class="text-brown hover:text-moss transition-colors font-medium py-1">Journal</a>
          <a href="/contact" class="text-brown hover:text-moss transition-colors font-medium py-1">Contact</a>
        </div>
      </nav>
    </header>

    <!-- Main Content -->
    <main class="flex-1">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-moss text-cream">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-10 md:gap-12">
          <!-- Brand Column -->
          <div>
            <div class="flex items-center gap-3 mb-2">
              <img src={logoSrc} alt="" width="36" height="36" class="h-9 w-auto mix-blend-multiply brightness-0 invert" />
              <p class="font-heading text-2xl font-bold">River Roots Studio</p>
            </div>
            <p class="text-cream/80 italic font-heading text-lg mb-4">Unearth Your Creative Compass</p>
            <p class="text-cream/70 text-sm">Jacksonville, Illinois</p>
          </div>

          <!-- Quick Links -->
          <div>
            <h3 class="text-cream font-semibold text-sm uppercase tracking-wider mb-4">Quick Links</h3>
            <ul class="space-y-2 text-sm">
              <li><a href="/workshops" class="text-cream/80 hover:text-cream transition-colors">Workshops</a></li>
              <li><a href="/creative-compass" class="text-cream/80 hover:text-cream transition-colors">Creative Compass</a></li>
              <li><a href="/about" class="text-cream/80 hover:text-cream transition-colors">About</a></li>
              <li><a href="/journal" class="text-cream/80 hover:text-cream transition-colors">Journal</a></li>
              <li><a href="/contact" class="text-cream/80 hover:text-cream transition-colors">Contact</a></li>
            </ul>
          </div>

          <!-- Newsletter & Social -->
          <div id="newsletter">
            <h3 class="text-cream font-semibold text-sm uppercase tracking-wider mb-4">Stay Connected</h3>
            <form class="flex gap-2 mb-6" action="#" method="POST">
              <label for="footer-email" class="sr-only">Email address</label>
              <input
                type="email"
                id="footer-email"
                name="email"
                placeholder="Your email"
                required
                class="flex-1 px-3 py-2 bg-cream/10 border border-cream/30 rounded text-cream placeholder:text-cream/50 text-sm focus:outline-none focus:ring-2 focus:ring-terracotta"
              />
              <button
                type="submit"
                class="px-4 py-2 bg-terracotta hover:bg-terracotta-dark text-cream rounded text-sm font-medium transition-colors"
              >
                Join
              </button>
            </form>

            <!-- Social Placeholders -->
            <div class="flex gap-4">
              <a href="#" class="text-cream/70 hover:text-cream transition-colors" aria-label="Instagram">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
              </a>
              <a href="#" class="text-cream/70 hover:text-cream transition-colors" aria-label="Facebook">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385h-3.047v-3.47h3.047v-2.642c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953h-1.514c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385c5.738-.9 10.126-5.864 10.126-11.854z"/></svg>
              </a>
              <a href="#" class="text-cream/70 hover:text-cream transition-colors" aria-label="Pinterest">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M12 0c-6.627 0-12 5.372-12 12 0 5.084 3.163 9.426 7.627 11.174-.105-.949-.2-2.405.042-3.441.218-.937 1.407-5.965 1.407-5.965s-.359-.719-.359-1.782c0-1.668.967-2.914 2.171-2.914 1.023 0 1.518.769 1.518 1.69 0 1.029-.655 2.568-.994 3.995-.283 1.194.599 2.169 1.777 2.169 2.133 0 3.772-2.249 3.772-5.495 0-2.873-2.064-4.882-5.012-4.882-3.414 0-5.418 2.561-5.418 5.207 0 1.031.397 2.138.893 2.738.098.119.112.224.083.345l-.333 1.36c-.053.22-.174.267-.402.161-1.499-.698-2.436-2.889-2.436-4.649 0-3.785 2.75-7.262 7.929-7.262 4.163 0 7.398 2.967 7.398 6.931 0 4.136-2.607 7.464-6.227 7.464-1.216 0-2.359-.631-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146 1.124.347 2.317.535 3.554.535 6.627 0 12-5.373 12-12 0-6.628-5.373-12-12-12z"/></svg>
              </a>
            </div>
          </div>
        </div>

        <div class="border-t border-cream/20 mt-10 pt-6 text-center text-cream/60 text-xs">
          <p>&copy; {new Date().getFullYear()} River Roots Studio. All rights reserved.</p>
        </div>
      </div>
    </footer>

    <script>
      const btn = document.getElementById('mobile-menu-btn');
      const menu = document.getElementById('mobile-menu');
      if (btn && menu) {
        btn.addEventListener('click', () => {
          const expanded = btn.getAttribute('aria-expanded') === 'true';
          btn.setAttribute('aria-expanded', String(!expanded));
          menu.classList.toggle('hidden');
        });
      }
    </script>
  </body>
</html>
